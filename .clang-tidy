---
# Clang-Tidy 配置文件
# 基于 Google C++ 风格指南，适配 C++20 和模块化开发

# 是否继承父目录的配置
InheritParentConfig: false

# 启用的检查项列表
# 格式: 检查组名 或 具体检查项名称
# - 开头表示禁用该检查项
Checks: >
  -*,
  bugprone-*,
  -bugprone-easily-swappable-parameters,
  -bugprone-branch-clone,
  -bugprone-narrowing-conversions,
  cppcoreguidelines-*,
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-pro-bounds-array-to-pointer-decay,
  -cppcoreguidelines-pro-bounds-pointer-arithmetic,
  -cppcoreguidelines-pro-type-reinterpret-cast,
  -cppcoreguidelines-pro-type-vararg,
  -cppcoreguidelines-avoid-c-arrays,
  -cppcoreguidelines-owning-memory,
  google-*,
  -google-readability-todo,
  -google-runtime-references,
  modernize-*,
  -modernize-use-trailing-return-type,
  -modernize-avoid-c-arrays,
  performance-*,
  readability-*,
  -readability-magic-numbers,
  -readability-identifier-length,
  -readability-function-cognitive-complexity,
  -readability-convert-member-functions-to-static,
  -readability-redundant-access-specifiers,
  -readability-avoid-const-params-in-decls,
  misc-*,
  -misc-non-private-member-variables-in-classes,
  -misc-use-anonymous-namespace,
  -misc-include-cleaner

# 将警告视为错误（留空表示不启用）
WarningsAsErrors: ""

# 头文件过滤器（正则表达式）
# 包含 src 目录下的所有文件，排除 build 目录
HeaderFilterRegex: 'src/.*'

# 是否检查系统头文件
SystemHeaders: false

# 格式化风格
# file 表示使用 .clang-format 文件中的配置
FormatStyle: file

# 检查选项的详细配置
CheckOptions:
  # C++ Core Guidelines - 特殊成员函数
  - key: cppcoreguidelines-special-member-functions.AllowSoleDefaultDtor
    value: "1"
    # 允许只有默认析构函数的类

  # Google 风格 - 命名空间注释
  - key: google-readability-namespace-comments.SpacesBefore
    value: "2"
    # 命名空间结束注释前的空格数

  # Google 风格 - 函数大小限制
  - key: google-readability-function-size.LineThreshold
    value: "100"
    # 函数最大行数
  - key: google-readability-function-size.StatementThreshold
    value: "800"
    # 函数最大语句数
  - key: google-readability-function-size.BranchThreshold
    value: "100"
    # 函数最大分支数
  - key: google-readability-function-size.ParameterThreshold
    value: "6"
    # 函数最大参数数量

  # Google 风格 - 命名空间缩进
  - key: google-readability-namespace-comments.ShortNamespaceLines
    value: "10"
    # 短命名空间的行数阈值
  - key: google-readability-namespace-comments.SpacesBefore
    value: "2"
    # 命名空间结束注释前的空格数

  # 现代化 - 使用 nullptr 替代 NULL
  - key: modernize-use-nullptr.NullMacros
    value: "NULL"
    # 需要替换为 nullptr 的宏列表

  # 现代化 - 使用 override 关键字
  - key: modernize-use-override.IgnoreDestructors
    value: "1"
    # 忽略析构函数的 override 检查

  # 现代化 - 使用 auto 关键字
  - key: modernize-use-auto.MinTypeNameLength
    value: "5"
    # 类型名最小长度，超过此长度建议使用 auto
  - key: modernize-use-auto.RemoveStars
    value: "0"
    # 是否移除指针/引用的 * 或 & 符号（0 表示不移除）

  # 现代化 - 使用默认成员初始化
  - key: modernize-use-default-member-init.UseAssignment
    value: "1"
    # 是否使用赋值初始化

  # 可读性 - 语句块周围的大括号
  - key: readability-braces-around-statements.ShortStatementLines
    value: "1"
    # 短语句的行数阈值

  # 可读性 - 容器大小检查
  - key: readability-container-size-empty.WarnAgainstEmptyNonEmpty
    value: "1"
    # 是否警告使用 empty() 而不是 size() == 0

  # 可读性 - 标识符命名规范（符合项目要求：使用 snake_case）
  - key: readability-identifier-naming.ClassCase
    value: "CamelCase"
    # 类名使用驼峰命名（如 MyClass）
  - key: readability-identifier-naming.StructCase
    value: "CamelCase"
    # 结构体名使用驼峰命名
  - key: readability-identifier-naming.EnumCase
    value: "CamelCase"
    # 枚举名使用驼峰命名
  - key: readability-identifier-naming.FunctionCase
    value: "lower_case"
    # 函数名使用 snake_case 命名（如 my_function）
  - key: readability-identifier-naming.VariableCase
    value: "lower_case"
    # 变量名使用 snake_case 命名
  - key: readability-identifier-naming.ParameterCase
    value: "lower_case"
    # 参数名使用 snake_case 命名
  - key: readability-identifier-naming.MemberCase
    value: "lower_case"
    # 成员变量名使用 snake_case 命名
  - key: readability-identifier-naming.PrivateMemberPrefix
    value: "m_"
    # 私有成员变量前缀
  - key: readability-identifier-naming.ProtectedMemberPrefix
    value: "m_"
    # 保护成员变量前缀
  - key: readability-identifier-naming.ConstantCase
    value: "CamelCase"
    # 常量名使用驼峰命名
  - key: readability-identifier-naming.ConstantPrefix
    value: "k"
    # 常量前缀（如 kMyConstant）
  - key: readability-identifier-naming.GlobalConstantCase
    value: "CamelCase"
    # 全局常量名使用驼峰命名
  - key: readability-identifier-naming.GlobalConstantPrefix
    value: "k"
    # 全局常量前缀
  - key: readability-identifier-naming.StaticConstantCase
    value: "CamelCase"
    # 静态常量名使用驼峰命名
  - key: readability-identifier-naming.StaticConstantPrefix
    value: "k"
    # 静态常量前缀
  - key: readability-identifier-naming.EnumConstantCase
    value: "CamelCase"
    # 枚举常量名使用驼峰命名
  - key: readability-identifier-naming.NamespaceCase
    value: "lower_case"
    # 命名空间名使用小写加下划线（如 my_namespace）
  - key: readability-identifier-naming.TemplateParameterCase
    value: "CamelCase"
    # 模板参数名使用驼峰命名
  - key: readability-identifier-naming.TemplateParameterPrefix
    value: "T"
    # 模板参数前缀（如 TMyType）

  # 性能 - 不必要的拷贝初始化
  - key: performance-unnecessary-copy-initialization.AllowedTypes
    value: ""
    # 允许不必要的拷贝的类型列表（留空表示不允许）

  # 性能 - 移动语义检查
  - key: performance-move-const-arg.CheckTriviallyCopyableMove
    value: "1"
    # 检查可简单拷贝类型的移动

  # Bugprone - 字符串拼接
  - key: bugprone-string-concatenation.CheckConcatenationToResult
    value: "1"
    # 检查字符串拼接到结果变量

  # Bugprone - 移动后使用检查
  - key: bugprone-use-after-move.WarnOnAllUses
    value: "1"
    # 警告所有移动后的使用

  # Doxygen 注释检查
  - key: readability-identifier-naming.IgnoreMainLikeFunctions
    value: "1"
    # 忽略类似 main 的函数命名检查
