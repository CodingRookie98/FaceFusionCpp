# 语言: None, Cpp, Java, JavaScript, ObjC, Proto, TableGen, TextProto
Language: Cpp
# 基础风格: LLVM, Google, Microsoft
BasedOnStyle: Google

# C++ 标准: Cpp03, Cpp11, Cpp14, Cpp17, Cpp20, Auto(自动检测)
Standard: Latest

# Tab 字符宽度
TabWidth: 2
# 缩进宽度（空格数）
IndentWidth: 4

# 是否使用 Tab 字符: Never(不使用), ForIndentation(仅缩进), ForContinuationAndIndentation(缩进和续行), Always(总是使用)
UseTab: Never

# 访问说明符(public、private、protected)的缩进偏移量
AccessModifierOffset: -4

# 开括号后的对齐方式(包括小括号/大括号/尖括号)
# - Align: 换行时参数与开括号对齐
# - DontAlign: 换行时使用配置的缩进空格数
# - AlwaysBreak: 强制换行，第一个参数不粘连括号
# - BlockIndent: 类似 AlwaysBreak，闭括号在下一行
AlignAfterOpenBracket: Align

# 连续赋值时是否对齐所有等号: None(不对齐), Consecutive(对齐)
AlignConsecutiveAssignments: None

# 连续声明时是否对齐所有声明的变量名和函数名
AlignConsecutiveDeclarations: false

# 续行符(\)的对齐方式
# - DontAlign: 不做对齐处理
# - Left: 尽可能向左对齐，以最长一行代码为准
# - Right: 与开发者写的最远的 \ 对齐
AlignEscapedNewlines: Right

# 水平对齐二元和三元表达式的操作数
AlignOperands: AlignAfterOperator

# 对齐连续的尾随注释
AlignTrailingComments: true

# 允许函数声明的所有参数放在下一行
AllowAllParametersOfDeclarationOnNextLine: true

# 允许短的代码块放在同一行: Never(不允许), Empty(仅空块), Always(总是允许)
AllowShortBlocksOnASingleLine: Always

# 允许短的 case 标签放在同一行
AllowShortCaseLabelsOnASingleLine: true

# 允许短的函数放在同一行: None(不允许), InlineOnly(仅类内定义), Empty(仅空函数), Inline(类内定义和空函数), All(所有函数)
AllowShortFunctionsOnASingleLine: Inline

# 允许短的 if 语句保持在同一行: Never(不允许), WithoutElse(无 else 时), AllIfsAndElse(所有 if 和 else)
AllowShortIfStatementsOnASingleLine: AllIfsAndElse

# 允许短的循环语句保持在同一行
AllowShortLoopsOnASingleLine: true

# 返回类型后是否总是换行: None(不换行), All(总是换行), TopLevel(仅顶级函数), AllDefinitions(所有定义), TopLevelDefinitions(顶级函数定义)
AlwaysBreakAfterReturnType: None

# 总是在多行字符串字面量前换行
AlwaysBreakBeforeMultilineStrings: false

# 模板声明换行风格
# - No: 不处理开发者风格
# - MultiLine: 仅在模板声明跨越多行时换行
# - Yes: 总是换行
BreakTemplateDeclarations: MultiLine

# 函数实参是否打包在同一行: true(同一行或各自一行), false(总是各自一行)
BinPackArguments: true

# 函数形参是否打包在同一行: true(同一行或各自一行), false(总是各自一行)
BinPackParameters: true

# 大括号前的换行方式
# - Attach: 大括号始终附加到上下文
# - Linux: 除函数、命名空间和类定义外与 Attach 类似
# - Mozilla: 除枚举、函数、记录定义外与 Attach 类似
# - Stroustrup: 除函数定义、catch、else 外与 Attach 类似
# - Allman: 总是在大括号前换行
# - GNU: 总是在大括号前换行，控制语句大括号额外缩进
# - WebKit: 在函数前换行
# - Custom: 自定义配置
BreakBeforeBraces: Custom

# 大括号换行配置，仅当 BreakBeforeBraces 设置为 Custom 时有效
BraceWrapping:
  # class 定义后是否换行
  AfterClass: false
  # 控制语句后是否换行
  AfterControlStatement: false
  # enum 定义后是否换行
  AfterEnum: false
  # 函数定义后是否换行
  AfterFunction: false
  # 命名空间定义后是否换行
  AfterNamespace: false
  # struct 定义后是否换行
  AfterStruct: false
  # union 定义后是否换行
  AfterUnion: false
  # extern 块后是否换行
  AfterExternBlock: false
  # catch 前是否换行
  BeforeCatch: false
  # else 前是否换行
  BeforeElse: false
  # 是否缩进大括号
  IndentBraces: false
  # 是否分离空函数
  SplitEmptyFunction: false
  # 是否分离空记录(class/struct/union)
  SplitEmptyRecord: false
  # 是否分离空命名空间
  SplitEmptyNamespace: false

# 在二元运算符前换行: None(在操作符后换行), NonAssignment(在非赋值操作符前换行), All(在所有操作符前换行)
BreakBeforeBinaryOperators: NonAssignment

# 在三元运算符前换行
BreakBeforeTernaryOperators: false

# 在构造函数的初始化列表的冒号后换行
BreakConstructorInitializers: AfterColon

# 在继承列表的冒号后换行
#BreakInheritanceList: AfterColon

# 在字符串字面量中换行
BreakStringLiterals: false

# 每行字符的限制，0 表示没有限制
ColumnLimit: 100

# 压缩命名空间（合并连续的命名空间声明）
CompactNamespaces: true

# 构造函数的初始化列表要么都在同一行，要么都各自一行
ConstructorInitializerAllOnOneLineOrOnePerLine: false

# 构造函数的初始化列表的缩进宽度
ConstructorInitializerIndentWidth: 4

# 续行（换行）的缩进宽度
ContinuationIndentWidth: 4

# 使用 C++11 列表初始化风格（去除大括号 { 后和 } 前的空格）
Cpp11BracedListStyle: true

# 是否根据代码自动推导指针和引用的对齐方式
DerivePointerAlignment: false

# 固定命名空间结束注释（自动添加/修复命名空间结束注释）
FixNamespaceComments: true

# 是否缩进 case 标签
IndentCaseLabels: false

# 预处理指令的缩进方式: None(不缩进), AfterHash(在 # 后缩进), BeforeHash(在 # 前缩进)
IndentPPDirectives: None

# 函数返回类型换行时，是否缩进函数声明或定义的函数名
IndentWrappedFunctionNames: false

# 保留的最大连续空行数
MaxEmptyLinesToKeep: 1

# 命名空间的缩进方式: None(不缩进), Inner(缩进嵌套命名空间的内容), All(缩进所有命名空间)
NamespaceIndentation: None

# 指针和引用的对齐方式: Left(int* a), Right(int *a), Middle(int * a)
PointerAlignment: Left

# 允许重新排版注释（自动调整注释的换行和格式）
ReflowComments: true

# 是否排序 #include 语句
SortIncludes: Never

# 是否排序 using 声明: Never(不排序), Lexicographic(按字典序排序)
SortUsingDeclarations: Lexicographic

# 在 C 风格类型转换后添加空格
SpaceAfterCStyleCast: false

# 在 template 关键字后添加空格
SpaceAfterTemplateKeyword: true

# 在赋值运算符前添加空格
SpaceBeforeAssignmentOperators: true

# 在开圆括号前添加空格: Never(从不), ControlStatements(仅控制语句), Always(总是)
SpaceBeforeParens: ControlStatements

# 在空的圆括号中添加空格
SpaceInEmptyParentheses: false

# 在尾随注释前的空格数（仅适用于 //）
SpacesBeforeTrailingComments: 1

# 在尖括号的 < 后和 > 前添加空格
SpacesInAngles: false

# 在 C 风格类型转换的括号中添加空格
SpacesInCStyleCastParentheses: false

# 在容器字面量（数组、字典等）中添加空格
SpacesInContainerLiterals: true

# 在方括号的 [ 后和 ] 前添加空格（不影响 lambda 和未指定大小的数组声明）
SpacesInSquareBrackets: false
