{
    "version": 6,
    "configurePresets": [
        {
            "name": "linux-base",
            "hidden": true,
            "description": "Base configuration for Linux",
            "generator": "Ninja",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux x64 Release",
            "description": "Release configuration for Linux x64",
            "inherits": "linux-base",
            "binaryDir": "${sourceDir}/build/linux-x64-release",
            "installDir": "${sourceDir}/build/install/linux-x64-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux x64 Debug",
            "description": "Debug configuration for Linux x64",
            "inherits": "linux-base",
            "binaryDir": "${sourceDir}/build/linux-x64-debug",
            "installDir": "${sourceDir}/build/install/linux-x64-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-x64-base",
            "hidden": true,
            "description": "Base configuration for Windows x64",
            "generator": "Ninja",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "msvc-x64-base",
            "hidden": true,
            "description": "Base configuration for Windows x64 using MSVC",
            "inherits": "windows-x64-base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "msvc-x64-release",
            "displayName": "MSVC x64 Release",
            "description": "Release configuration for Windows x64 using MSVC",
            "inherits": "msvc-x64-base",
            "binaryDir": "${sourceDir}/build/msvc-x64-release",
            "installDir": "${sourceDir}/build/install/msvc-x64-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "msvc-x64-debug",
            "displayName": "MSVC x64 Debug",
            "description": "Debug configuration for Windows x64 using MSVC",
            "inherits": "msvc-x64-base",
            "binaryDir": "${sourceDir}/build/msvc-x64-debug",
            "installDir": "${sourceDir}/build/install/msvc-x64-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "msvc-x64-debug",
            "displayName": "Build MSVC x64 Debug",
            "description": "Build Debug configuration for Windows x64",
            "configurePreset": "msvc-x64-debug",
            "configuration": "Debug"
        },
        {
            "name": "msvc-x64-release",
            "displayName": "Build MSVC x64 Release",
            "description": "Build Release configuration for Windows x64",
            "configurePreset": "msvc-x64-release",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "msvc-x64-debug",
            "displayName": "Test MSVC x64 Debug",
            "description": "Run tests for Debug configuration",
            "configurePreset": "msvc-x64-debug",
            "configuration": "Debug",
            "execution": {
                "workingDirectory": "${sourceDir}/build/msvc-x64-debug/bin"
            },
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "msvc-x64-release",
            "displayName": "Test MSVC x64 Release",
            "description": "Run tests for Release configuration",
            "configurePreset": "msvc-x64-release",
            "configuration": "Release",
            "execution": {
                "workingDirectory": "${sourceDir}/build/msvc-x64-release/bin"
            },
            "output": {
                "outputOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "msvc-x64-release",
            "displayName": "Release Workflow",
            "description": "Configure, build and test release configuration",
            "steps": [
                {
                    "type": "configure",
                    "name": "msvc-x64-release"
                },
                {
                    "type": "build",
                    "name": "msvc-x64-release"
                },
                {
                    "type": "test",
                    "name": "msvc-x64-release"
                }
            ]
        },
        {
            "name": "msvc-x64-debug",
            "displayName": "Debug Workflow",
            "description": "Configure, build and test debug configuration",
            "steps": [
                {
                    "type": "configure",
                    "name": "msvc-x64-debug"
                },
                {
                    "type": "build",
                    "name": "msvc-x64-debug"
                },
                {
                    "type": "test",
                    "name": "msvc-x64-debug"
                }
            ]
        }
    ]
}